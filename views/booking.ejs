<%- include("./partials/_header.ejs")  %>



    <section class="mission">
        <div class="gooming-background-image"></div>
        <div class="mission-statement">
            <h1>Pets-R-Us</h1>
            <h3>A home away from home</h3>
            <a href="/register" class="btn btn-primary">Register for a FREE account!</a>
        </div>
    </section>
    
    <section>
        <h3>Book your appointment today!</h3>
        <div class="card">
            <div class="card-content">
                <div class="form">
                    <form action="/booking" method="post">
                        <div class="form-field">
                            <label for="custFirstName">First Name</label>
                            <br>
                            <input type="text" class="input" name="custFirstName" id="custFirstName" required>
                        </div>
                        <div class="form-field">
                            <label for="custLastName">Last Name</label>
                            <br>
                            <input type="text" class="input" name="custLastName" id="custLastName" required>
                        </div>
                        <div class="form-field">
                            <label for="custId">Customer ID</label>
                            <br>
                            <input type="text" class="input" name="custId" id="custId" required>
                        </div>
                        <div class="form-field">
                            <label for="custEmail">Email</label>
                            <br>
                            <input type="text" class="input" name="custEmail" id="custEmail" required>
                        </div>
                        <div class="form-field">
                            <label for="servicee">Service</label>
                            <br>
                            <select class="drop-down-menu full width" name="service" id="service" required>
                                <option value="grooming">Grooming</option>
                                <option value="boarding">Boarding</option>
                                <option value="training">Training</option>
                            </select>
                        </div>
                        <div class="form-field">
                            <input type="submit" value="Book your appointment" class="btn btn-primary full width">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


<%- include("./partials/_footer.ejs")  %>